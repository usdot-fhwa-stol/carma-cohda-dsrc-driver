{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "~/src/docker/install.sh && cp -r /home/carma/install /opt/carma/install && sudo chmod -R +x /opt/carma/install",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd ~/ && rm -rf build",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "source /opt/carma/install/setup.bash && ros2 launch /opt/carma/vehicle/config/drivers.launch.py drivers:=dsrc_driver && wait-for-it.sh localhost:11311 -- roslaunch dsrc_driver dsrc_node.launch remap_ns:=/saxton_cav/drivers",
            "group": {
                "kind": "build"
            }
        }

    ]
}